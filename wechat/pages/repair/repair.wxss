/* 全局容器 */
.container {
  padding: 30rpx;
  background: #f5f5f5;
}

/* 顶部信息栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 28rpx;
  color: #666;
}

/* 卡片样式 */
.card {
  background: white;
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  padding: 20rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #e0e0e0;
}

.card-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.card-content {
  padding: 20rpx;
}

/* 表单项样式 */
.form-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input,
.textarea {
  border: 1rpx solid #e0e0e0;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: #f8f8f8;
}

.input {
  height: 70rpx;
}

.textarea {
  min-height: 150rpx;
  resize: vertical;
  margin-bottom: 20rpx;
}

/* 图片选择器 */
.image-picker-container {
  display: flex;
  flex-direction: column;
}

.picker-btn {
  background: #007AFF;
  color: white;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.tianjia {
  width: 32rpx;
  padding-right: 20rpx;
}

.preview-list {
  white-space: nowrap;
  padding: 10rpx 0;
}

.preview-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 15rpx;
  border-radius: 8rpx;
}

.preview-image:last-child {
  margin-right: 0;
}

/* 提交按钮 */
.submit-btn {
  margin: 30rpx;
  background: #007AFF;
  color: white;
  border-radius: 30rpx;
  padding: 25rpx 0;
  font-size: 30rpx;
}

/* 照片滚动区域 */
.photo-card {
  margin-top: 20rpx;
}

.photo-list {
  white-space: nowrap;
  padding: 20rpx 0;
}

.photo {
  width: 200rpx;
  height: 200rpx;
  margin-right: 15rpx;
  border-radius: 8rpx;
}

.photo:last-child {
  margin-right: 0;
}

/* 交互效果 */
.input:active,
.textarea:active {
  background: #f0f0f0;
}

.preview-image:active {
  opacity: 0.8;
}