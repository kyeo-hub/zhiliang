.search-box {
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  background: #f5f5f5;
}

.list-container {
  height: calc(100vh - 120rpx);
}

.list-item {
  margin: 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.tag-number {
  font-weight: bold;
  color: #333;
}

.create-date {
  font-size: 24rpx;
  color: #666;
}

.item {
  display: flex;
  justify-content: space-between;
}
.item-body {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.issue {
  color: #e74c3c;
  font-size: 28rpx;
}

.creator {
  color: #3498db;
  font-size: 26rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
}