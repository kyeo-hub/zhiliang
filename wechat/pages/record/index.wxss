/* index.wxss */
.container {
  padding: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.filter-btn {
  background: #007AFF;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}
/* 重置按钮样式 */
.reset-btn {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  margin-left: 20rpx;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

/* 按钮组布局 */
.filter-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.filter-panel {
  background: #f5f5f5;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.picker, .date-picker {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-left: 10rpx;
}

.confirm-btn {
  background: #007AFF;
  color: white;
  border: 1rpx solid #ddd;
  margin-left: 20rpx;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.list-container {
  height: calc(100vh - 380rpx);
}

.list-item {
  background: white;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
}

.item-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.status-tag {
  margin-top: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.repaired {
  color: #32CD32;
  background: #DFF0D8;
}

.unrepaired {
  color: #FF4949;
  background: #F2DEDE;
}

.loading-indicator {
  text-align: center;
  padding: 30rpx 0;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.pagination {
  position: fixed;
  bottom: 80px;
  left: 0;
  width: 100%;
  padding: 10rpx;
  background: white;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-total {
  width: 30%;
}
.page-math {
  width: 70%;
}

/* 按钮样式（调整后） */
.page-btn {
  background: #007AFF;
  color: white;
  padding: 10rpx 20rpx; /* 减少内边距 */
  border-radius: 30rpx; /* 适当调整圆角 */
  margin-left: 10rpx; /* 减少左右间距 */
  font-size: 24rpx; /* 减小字体大小 */
  min-width: 120rpx; /* 设置最小宽度（可选） */
}

/* 可选：添加悬停效果（提升交互感） */
.page-btn:active {
  opacity: 0.8;
}

.group-btn{
  display: flex;
  justify-content: space-between;
  padding: 0rpx 20rpx;
}

.detail-btn {
  background: #007AFF;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  max-width: 300rpx;
}

.delete-btn {
  background: #FF4949;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  max-width: 300rpx;
}