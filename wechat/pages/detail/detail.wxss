/* 容器全局样式 */
.container {
  padding: 30rpx;
  background: #f5f5f5;
}

/* 顶部信息栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 28rpx;
  color: #666;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 12rpx;
  width: 100%;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  padding: 20rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #e0e0e0;
}

.card-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.card-content {
  padding: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label {
  width: 200rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 照片滚动区域 */
.photo-card {
  margin-top: 20rpx;
}

.photo-list {
  white-space: nowrap;
  padding: 20rpx 0;
}

.photo {
  width: 200rpx;
  height: 200rpx;
  margin-right: 15rpx;
  border-radius: 8rpx;
}

.photo:last-child {
  margin-right: 0;
}

/* 修复信息卡片 */
.repair-card .card-title {
  color: #007AFF;
}

.repair-card .card-header {
  background: #e6f7ff;
}

/* 交互效果 */
.photo:active {
  opacity: 0.8;
}

